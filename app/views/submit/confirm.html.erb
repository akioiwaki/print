<div class="page-header">
  <h1>お問い合わせ</h1>
</div>
 
<%= form_for @submit, :url =>submit_thanks_path do |f| %>
  <table class="table">
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :sirname %>
        <%= @submit.sirname %>
        <%= f.hidden_field :firstname %>
        <%= @submit.firstname %>
      </td>
    </tr>
      <th>フリガナ</th>
      <td>
        <%= f.hidden_field :sirname_kana %>
        <%= @submit.sirname_kana %>
        <%= f.hidden_field :firstname_kana %>
        <%= @submit.firstname_kana %>
      </td>
    </tr>
     <tr>
      <th>会社名・担当部署</th>
      <td>
        <%= f.hidden_field :company %>
        <%= @submit.company %>
      </td>
    </tr> <tr>
      <th>郵便番号</th>
      <td>
        <%= f.hidden_field :postcode1 %>
        <%= @submit.postcode1 %>-
        <%= f.hidden_field :postcode2 %>
        <%= @submit.postcode2 %>
      </td>
    </tr> <tr>
      <th>都道府県</th>
      <td>
        <li><%= @submit.prefecture %><%= f.hidden_field :prefecture %></li>
      
      </td>
    </tr> <tr>
      <th>市区町村</th>
      <td>
        <%= f.hidden_field :city %>
        <%= @submit.city %>
      </td>
    </tr> <tr>
      <th>町名・番地</th>
      <td>
        <%= f.hidden_field :town %>
        <%= @submit.town %>
      </td>
    </tr> <tr>
      <th>建物名</th>
      <td>
        <%= f.hidden_field :building %>
        <%= @submit.building %>
      </td>
    </tr> <tr>
      <th>TEL</th>
      <td>
        <%= f.hidden_field :tel %>
        <%= @submit.tel %>
      </td>
    </tr> <tr>
      <th>FAX</th>
      <td>
        <%= f.hidden_field :fax %>
        <%= @submit.fax %>
      </td>
    </tr> <tr>
      <th>Eメール</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @submit.email %>
      </td>
    </tr> <tr>
      <th>ご希望の連絡方法</th>
      <td>
        <%= f.hidden_field :check %>
        <%= @submit.check .join(", ") %>

      </td>
    </tr>
    <tr>
      <th>お問い合わせ種別</th>
      <td>
        <%= f.hidden_field :subject %>
        <%= simple_format(@submit.subject) %>
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :message %>
        <%= simple_format(@submit.message) %>
      </td>
    </tr>
  </table>
  <%= f.submit '送信', :class => 'btn btn-primary' %>
<% end %>